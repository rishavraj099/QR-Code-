<!DOCTYPE html>
<html>
<head>
  <title>All QR Codes</title>
  <style>
    body {
      background: #f0f4f8;
      font-family: Arial, sans-serif;
    }
    h1 {
      text-align: center;
      color: #2d6cdf;
      margin-top: 40px;
    }
    table {
      border-collapse: collapse;
      width: 90%;
      margin: 30px auto;
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    th, td {
      border: none;
      padding: 12px 10px;
      text-align: center;
      font-size: 16px;
    }
    th {
      background: #2d6cdf;
      color: #fff;
    }
    tr:nth-child(even) {
      background: #f7faff;
    }
    tr:nth-child(odd) {
      background: #e3eefd;
    }
    button {
      background: #2d6cdf;
      color: #fff;
      border: none;
      padding: 6px 16px;
      border-radius: 4px;
      font-size: 14px;
      cursor: pointer;
      margin: 0 2px;
    }
    button:hover {
      background: #1a4fa0;
    }
    .modal {
      display: none; position: fixed; z-index: 1; left: 0; top: 0; width: 100%; height: 100%;
      overflow: auto; background-color: rgba(0,0,0,0.4);
    }
    .modal-content {
      background-color: #fff; margin: 10% auto; padding: 20px; border: 1px solid #888;
      width: 320px; text-align: center; border-radius: 10px;
    }
    .close {
      color: #aaa; float: right; font-size: 28px; font-weight: bold; cursor: pointer;
    }
    .close:hover { color: #d32f2f; }
    .back-link {
      display: block;
      text-align: center;
      margin: 20px auto;
      color: #2d6cdf;
      text-decoration: none;
      font-weight: bold;
    }
    .back-link:hover { text-decoration: underline; }
  </style>
</head>
<body>
  <h1>All QR Codes</h1>
  <table>
    <tr>
      <th>Data</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
    <% qrCodes.forEach(qr => { %>
      <tr>
        <td><%= qr.data %></td>
        <td><%= new Date(qr.createdAt).toLocaleString() %></td>
        <td>
          <button onclick="viewQR('<%= qr.qrImage %>', '<%= qr.data %>')">View</button>
          <form action="/delete/<%= qr._id %>" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this QR code?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
  <a class="back-link" href="/">&#8592; Back to Generator</a>
  <!-- Modal for QR code view -->
  <div id="qrModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h3>QR Code</h3>
      <img id="qrImg" src="" alt="QR Code" style="width:200px;">
      <p id="qrData"></p>
    </div>
  </div>
  <script>
    function viewQR(img, data) {
      document.getElementById('qrImg').src = img;
      document.getElementById('qrData').innerText = data;
      document.getElementById('qrModal').style.display = 'block';
    }
    function closeModal() {
      document.getElementById('qrModal').style.display = 'none';
    }
    window.onclick = function(event) {
      if (event.target == document.getElementById('qrModal')) {
        closeModal();
      }
    }
  </script>
</body>
</html>